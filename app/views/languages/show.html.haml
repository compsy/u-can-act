- locales = Rails.application.config.i18n.available_locales.map(&:to_s)
= render partial: 'shared/header'

.container
  = form_with url: '/language/change', method: 'post' do
    .row
      .col.s12
        - locales.each do |locale|
          %p
            %label
              %input{name: 'locale', type: 'radio', value: locale, checked: @locale == locale}
              %span=locale
    .row
      .col.s12
        = button_tag('Submit', type: 'submit', class: 'btn waves-effect waves-light')
