= render partial: 'shared/header'
%h1 Webapp Begeleiders
%p
  Voor
  %i
    = @mentor.first_name
    = @mentor.last_name
%ul.collection
  - @student_protocol_subscriptions.each do |protocol_subscription|
    - student = protocol_subscription.filling_out_for
    - open_responses = protocol_subscription.responses.opened.reject{|resp| resp.expired?}
    = render partial: 'student_entry', locals: {student: student, open_responses: open_responses}
%footer
  = link_to('Disclaimer', disclaimer_path)
= render 'shared/feedback_button'
