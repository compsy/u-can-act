= render partial: 'shared/header'
= QuestionnaireGenerator.new.generate_questionnaire(response_id: @response.id,
  content: @protocol.language_questionnaire.content,
  title: @protocol.language_questionnaire.title,
  submit_text: (@response.person.locale == 'en' ? 'Next' : 'Volgende'),
  action: '/language',
  unsubscribe_url: @response.unsubscribe_url,
  locale: @response.person.locale,
  params: { authenticity_token: form_authenticity_token(form_options: { action: '/language', method: 'post' })})
